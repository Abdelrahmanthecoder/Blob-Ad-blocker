{
  "name": "BLOB Adblocker",
  "version": "1.1.0",
  "description": "Welcome to BLOB Adblocker, your one-stop shop for ad blocking!",
  "manifest_version": 3,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "action": {
    "default_title": "BLOB",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
