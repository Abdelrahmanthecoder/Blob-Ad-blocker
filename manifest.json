{
  "name": "BLOB Adblocker",
  "version": "1.0.918",
  "description": "Welcome to BLOB Adblocker, your one-stop shop for ad blocking!",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
      "scripts": ["background.js"]
