{
  "name": "BLOB Adblocker",
  "version": "1.0.931",
  "description": "Welcome to BLOB Adblocker, your one-stop shop for ad blocking!",
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  "background": {
      "scripts": ["background.js"]
  },
  "icons": {
      "16": "/icons/Blob16x16.png",
      "48": "/icons/Blob48x48.png",
      "128": "/icons/Blob128x128.png"
  },
  "browser_action": {
    "default_title": "BLOB",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/Blob16x16.png",
      "48": "/icons/Blob48x48.png",
      "128": "/icons/Blob128x128.png"
    }
  },
  "manifest_version": 2
}
